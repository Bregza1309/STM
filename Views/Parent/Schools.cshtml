@model List<School>
@{
    Layout = "_ParentLayout";
}
<div class="container py-4">
    <h1 class="text-center text-white display-2">School Search</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Schools" asp-controller="Parent"  method="get" class="mb-4" id="searchForm">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search drivers..." name="key">
                    <button type="submit" id="searchInput" class="btn btn-dark"><span class="iconify" data-icon="ri:user-search-fill"></span></button>
                </div>
            </form>
        </div>
    </div>
    <table class="table table-striped table-dark text-white">
        <thead>
            <tr><th>School's Name</th><th>City</th><th>Province</th><th>Postal Code</th><th>Latitude , Longitude</th></tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr><td colspan="5" class="text-center">No Search Result (~..~)</td></tr>
            }
            else
            {
                @foreach (var school in Model)
                {
                    
                    <tr>
                        <td>
                            @school.Name
                        </td>
                        <td>
                            @school.City
                        </td>
                        <td>
                            @school.Provice
                        </td>
                        <td>
                            @school.PostalCode
                        </td>
                        <td>
                            @school.Longitude,@school.Latitude
                        </td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-center">Total </td>
                <td colspan="2" class="text-center">@Model.Count()</td>
            </tr>
        </tfoot>
    </table>
</div>